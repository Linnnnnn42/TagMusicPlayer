{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "module": "preserve",
        "moduleResolution": "bundler",
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
